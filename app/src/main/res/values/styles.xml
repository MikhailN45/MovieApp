<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/global_silver</item>
        <item name="colorControlActivated">@color/pink</item>
        parent="android:style/Widget.Material.RatingBar.Small"
    </style>
    <style name="customRatingBar" parent="Widget.AppCompat.RatingBar">
        <item name="android:progressDrawable">@drawable/custom_rating_bar</item>
        <item name="android:minHeight">6dp</item>
        <item name="android:maxHeight">12dp</item>
        <item name="android:stepSize">1</item>
        <item name="android:isIndicator">true</item>
        <item name="android:numStars">5</item>
    </style>
</resources>